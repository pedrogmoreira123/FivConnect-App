  app.post('/api/whatsapp/conversations/:conversationId/send-media', requireAuth, upload.single('file'), async (req, res) => {
    console.log('üì§ [SEND-MEDIA] Iniciando upload de m√≠dia...');
    
    const { conversationId } = req.params;
