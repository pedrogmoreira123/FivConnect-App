      const [companyIdFromInstance] = instanceName.split('_');
      io.emit('connectionUpdate', { 
        instanceName, 
        status: newStatus, 
        companyId: companyIdFromInstance 
      });

      res.json({ 
        message: 'Status synchronized successfully',
        instanceName,
        status: newStatus,
